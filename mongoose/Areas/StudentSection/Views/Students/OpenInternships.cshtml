@model IEnumerable<mongoose.Models.Internship>

@{
    ViewBag.Title = "Open Interships";
}
@Html.Partial("_studentNav")
<h2>OPEN INTERNSHIPS</h2>



&nbsp;&nbsp;&nbsp;<label class="filter">Filter by</label>&nbsp;&nbsp;&nbsp;<label class="filter">Format</label>&nbsp;&nbsp;&nbsp;
@Html.DropDownList("EmployerList", null, htmlAttributes: new { @class = "filter", @onchange = "openByEmployer()" })
<div id="openInternshipContainer">
    @Html.Partial("_Open", Model)
</div>



@section Scripts {
    <script type="text/javascript">
        function openByEmployer() {
            var employerId = $('#EmployerList').val();
            var container = $('#openInternshipContainer');
            container.load('@Url.Action("OpenByEmployer")?id=' + employerId);
            console.log(employerId);

        }
    </script>
}