@model IEnumerable<mongoose.Models.Student_Internship>
@{
    ViewBag.Title = "My Interships";
}
@Html.Partial("_studentNav")
<h2>My Internships</h2>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Internship.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Midterm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Final)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Term)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Internship.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Midterm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Final)
            </td>
            <td>
                @item.Semester, @item.Term
            </td>
            <td>
                <div class="internship_buttons">
                    @Html.ActionLink("More Details", "Details/" + item.StudentInternshipId, "Student_Internship", new { area = "Student_InternshipSection" }, new { @class = "label label-success" }) 
                </div>
                
            </td>
        </tr>
    }

</table>
