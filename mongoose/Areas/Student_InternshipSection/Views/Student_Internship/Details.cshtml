@model mongoose.Models.Student_Internship

@{
    ViewBag.Title = "Details";
}
@{ if (User.IsInRole("Employer"))
    {
        @Html.Partial("~/Areas/EmployerSection/Views/Shared/_employerNav.cshtml")
    }
    if (User.IsInRole("Student"))
    {
        @Html.Partial("~/Areas/StudentSection/Views/Shared/_studentNav.cshtml")
    }
    if (User.IsInRole("Instructor"))
    {
        @Html.Partial("~/Areas/InstructorSection/Views/Shared/_instructorNav.cshtml")
    }
    if (User.IsInRole("Admin"))
    {
        @Html.Partial("~/Areas/AdminSection/Views/Shared/_adminNav.cshtml")
    }
}
<h2>Details</h2>

<div>
    <h4>Student Internship</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Title
        </dt>

        <dd>
            @{
                <a href="~/InternshipSection/Internships/Details/@Model.InternshipId">@Html.DisplayFor(model => model.Internship.Name)</a>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Internship.Employer)
        </dt>

        <dd>
            @{
                <a href="~/EmployerSection/Employers/Details/@Model.Internship.EmployerId">@Html.DisplayFor(model => model.Internship.Employer.Name)</a>
            }
        </dd>
        <dt>
            Student
        </dt>

        <dd>
            
            @{
                <a href="~/StudentSection/Students/Details/@Model.StudentId">@Html.DisplayFor(model => model.Student.LastName), @Html.DisplayFor(model => model.Student.FirstName)</a>
            }

        </dd>

        <dt>
            Instructor
        </dt>

        <dd>
            @{
                <a href="~/InstructorSection/Instructors/Details/@Model.InstructorId">@Html.DisplayFor(model => model.Instructor.LastName), @Html.DisplayFor(model => model.Instructor.FirstName)</a>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Term)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Semester), @Html.DisplayFor(model => model.Term)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Midterm)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Midterm)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Final)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Final)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>



    </dl>
</div>
<p>
    @{
        if (User.IsInRole("Student"))
        {
            @Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-success" })
        }
        if (User.IsInRole("Employer"))
        {
            <div>
                @Html.ActionLink("Back", "ActiveInternships", "Employers", new { area = "EmployerSection" }, new { @class = "btn btn-success" })
                @Html.ActionLink("Edit", "Edit", new { id = Model.StudentInternshipId }, new { @class = "btn btn-warning" })
            </div>
            
        }
        if (User.IsInRole("Instructor"))
        {
            <div>
                @Html.ActionLink("Edit", "Edit", new { id = Model.StudentInternshipId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Back", "ActiveInternships", "Instructors", new { area = "InstructorSection" }, new { @class = " btn btn-success" })
            </div>
            
        }
        if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-info" })
        }
    }
</p>
