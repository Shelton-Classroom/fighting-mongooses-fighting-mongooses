@model IEnumerable<mongoose.Models.Major>
@{
    ViewBag.Title = "Majors";
}
@Html.Partial("_instructorNav")
<h2>Majors</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Majors", new { area = "MajorSection" }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiredCredits)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredCredits)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit/" + item.MajorId, "Majors", new { area = "MajorSection" }, null) |
                @Html.ActionLink("Details", "Details/" + item.MajorId, "Majors", new { area = "MajorSection" }, null) |
                @Html.ActionLink("Delete", "Delete/" + item.MajorId, "Majors", new { area = "MajorSection" }, null)
            </td>
        </tr>
    }

</table>
